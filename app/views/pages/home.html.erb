<div class="wrapper">
  <div class="encart">
    <div class="container">
      <div class="row">
        <div class="col-xs-12">
          <h1 class="text-center">GAME IN PIXELS</h1>
          <div class="mario">
            <%= image_tag "Mario1.png" %>
          </div>
          <div class=" form form-inline text-center">
            <%= simple_form_for @console do |f| %>
            <%= f.input :address, label: false, placeholder:'WHERE' %>
            <%= f.input :brand, label: false, :collection => %w[NINTENDO SEGA ATARI] %>
            <%= f.input :model, label: false, :collection => ['Master System 1', 'Master System 2', 'MegaDrive 16 bits', 'Saturne','GameGear', 'GameBoy Fat', 'N64', 'SuperNintendo', 'SuperNes', '2600'] %>
            <%= f.submit "GAME", class: "btn form-control btn-primary" %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
