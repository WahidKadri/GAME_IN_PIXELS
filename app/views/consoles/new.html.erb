<div class="wrapper2">
  <div class="container">
    <div class="black-card">
      <div class="row">
        <div class="col-md-6">
          <div class="title">
            <h1 class="text-center">Add your Gaming Console</h1>
          </div>
        </div>
        <div class="col-md-4 col-md-offset-1 padding-form ">
          <% if @console.errors.any? %>
              <div class="errors-container">
                <ul>
                  <% @console.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                </ul>
              </div>
            <% end %>
              <%= simple_form_for @console do |f| %>
              <%= f.input :brand, :collection => @brands %>
              <%= f.input :model, :collection => @models %>
              <%= f.input :number_of_pads %>
              <%= f.input :address %>
              <%= f.input :description %>
              <%= f.input :price %>
              <%= f.input :photo %>
              <%= f.input :photo_cache, as: :hidden %>
              <%= f.submit class: "btn-green btn form-control" %>
              <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
